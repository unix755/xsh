#!/bin/sh /etc/rc.common

START=90
STOP=01
USE_PROCD=1

service_data() {
    echo "xray is starting up..."
}

start_service() {
    procd_open_instance
	procd_set_param env XRAY_LOCATION_ASSET=/usr/local/etc/xray
    procd_set_param command /usr/local/bin/xray
    procd_append_param command run -config /usr/local/etc/xray/config.json
    procd_set_param pidfile /var/run/xray.pid
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}